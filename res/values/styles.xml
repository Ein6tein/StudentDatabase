<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Row text style-->
    <style name="RowTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/row_text_size</item>
        <item name="android:textColor">@color/row_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Action bar style-->
    <style name="CustomActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_bg</item>
    </style>

    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

</resources>